{
  "name": "chrome-stylize - web-dark-mode",
  "author": "Akira HIRATA modified by kabahandle",
  "description": "chrome extension for customize CSS and JS.",
  "version": "1.0.0",
  "manifest_version": 2,
  "web_accessible_resources": ["*"],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.yahoo.co.jp/*"],
      "css": ["yahoo/style.css"]
    },
    {
      "matches": ["https://search.yahoo.co.jp/*"],
      "css": ["yahoo/style.css"]
    },
    {
      "matches": ["https://analytics.twitter.com/*"],
      "css": ["twitter-analytcs/style.css"]
    },
    {
      "matches": ["http://www.nicovideo.jp/watch/*"],
      "css": ["nico/style.css"],"js": ["nico/script.js"]
    }
  ]
}
